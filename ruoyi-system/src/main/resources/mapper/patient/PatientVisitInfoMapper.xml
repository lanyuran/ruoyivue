            <if test="phone != null and phone != ''">phone = #{phone},</if>
            <if test="pastMedication != null">past_medication = #{pastMedication},</if>
            <if test="chiefComplaint != null and chiefComplaint != ''">chief_complaint = #{chiefComplaint},</if>
