    <delete id="deletePatientVisitInfoByVisitIds" parameterType="String">
        delete from patient_visit_info where visit_id in 
        <foreach item="visitId" collection="array" open="(" separator="," close=")">
            #{visitId}
        </foreach>
    </delete>
